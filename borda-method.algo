algorithme Borda
debut
declarer  nbcandidats -> entier_naturel;
afficher ("Nombre de candidats : ");
saisir (nbcandidats);
declarer nbelecteurs -> entier_naturel;
afficher ("Nombre d'électeurs : ");
saisir(nbelecteurs);
declarer candidats -> tableau_de entier_naturel de taille (nbcandidats);   
pour (i variant_de 0 à taille(nbcandidats)-1)// tout les nom des candidats
    faire
        afficher ("nom du candidat ",i,":" )
        saisir(candidats[i]);
    ffaire
pour (i variant_de 0 a taille(nbelecteurs))
    faire 
     declarer classement -> tableau_de entier_naturel de taille(nbelecteurs);
        afficher ("electeur",i,"taper votre classement :");
        saisir(classement);
    ffaire
declarer points : entier_naturel;
declarer score : entier_naturel;
pour (i variant_de 0 a taille(classement)-1)
    faire 
        classement[i];
         pour (j variant_de 0 a taille(candidats)-1)
            faire
                points <- nbcandidats -1 - j;
            ffaire
        pour (v variant_de 0 a taille(candidats)-1)
        faire
            si (classement[i] vaut candidats[v])
                score[v] <- score[v] + points ;
            fsi
        ffaire
    ffaire
declarer maxscore : entier_naturel;
maxscore <- -1;
declarer gagnant : caractere;
pour (i variant_de taille(candidats)-1)
faire 
        si (score[i] > maxscore)
            maxscore <- score[i];
            gagnant <- candidats[i];
        fsi
ffaire

pour (i variant_de taille(candidats)-1)
faire 
     afficher("le candidat", candidats[i],"à",score[i], "points");
ffaire
afficher("le gagnant selon la methode de Borda est", gagnant);

fin
